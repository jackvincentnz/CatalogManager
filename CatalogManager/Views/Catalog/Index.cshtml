@model CatalogManager.Models.CatalogViewModel

@{
    ViewBag.Title = "Catalog Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Category")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Categories) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", "Category", new {id = item.Id}, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Category", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "Category", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
